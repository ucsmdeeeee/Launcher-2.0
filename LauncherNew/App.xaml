<Application x:Class="LauncherNew.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LauncherNew"
             xmlns:global="clr-namespace:"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/ApplicationStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Добавляем конвертер здесь -->
            <local:OnlineStatusToBrushConverter x:Key="OnlineStatusToBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

